@page
@model WebWedding.Pages.OrganizatorAzuriranjeProstoraModel
@{
    Layout =  "_Layout_PrikazMenija_Organizator";
}
    <input type="hidden" id="organizatorID" asp-for="@Model.OrganizatorID">
<form method="POST" enctype="multipart/form-data">
    <div class="s">
        <br />
        <h1>Dodaj novi prostor:</h1>
        <br />
        <input type="hidden" asp-for="ID" />
        <div asp-validation-summary="All"></div>
        <div style="display:flex;flex-direction: column; margin-left: 40%; width: 250px;">
            <div class="border-bottom border-top">
                
                <div class="border-bottom border-top form-group w"> Naziv: <input type="text" asp-for="novProstor.Naziv" required /> </div>
                
                <div class="border-bottom border-top form-group w"> Adresa: <input type="text" asp-for="novProstor.Adresa" required /> </div>
                
                <div class="border-bottom border-top form-group w"> Opis: <input type="text" asp-for="novProstor.Opis" required /> </div>
                
                <div class="border-bottom border-top form-group w"> Kapacitet: <input type="number" asp-for="novProstor.Kapacitet" required /> </div>
                
                <div class="border-bottom border-top form-group w"> Broj zvezdica: <input type="number" asp-for="novProstor.BrojZvezdica" required /> </div>
                
                <div class="border-bottom border-top form-group w"> Link: <input type="text" asp-for="novProstor.Link" required /> </div>
                
                <div class="border-bottom border-top form-group w"> Datum vazenja ugovora: <input type="date" asp-for="novProstor.DatumVazenja" required /> </div>
                
                <div class="border-bottom border-top form-group w"> Slika: <input type="file" asp-for="Slikaa" required /> </div>
                <br />
                <div class="border-bottom border-top lll"><input type="submit" value="Dodaj" asp-page-handler="Dodaj" /></div>
                <br />
            </div>
         </div>
        </div>
        <br />
</form>

<style scoped>
    .w {
        font-size: 20px;
        color: black;
    }


    .lll {
        font-size: 25px;
        color: #8B3A3A;
    }

    .s {
        width: 100%;
        text-align: center;
        align-content: center;
    }
</style>