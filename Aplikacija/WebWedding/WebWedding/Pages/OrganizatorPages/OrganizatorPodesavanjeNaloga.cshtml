@page
@model WebWedding.Pages.OrganizatorPages.OrganizatorPodesavanjeNalogaModel
@{
    ViewData["Title"] = "Podesavanja";
    Layout = "_LayoutOrganizatorPodesavanje";
}
<br />


<input type="hidden" id="organizatorID" asp-for="@Model.OrganizatorID">
<br />
<div class="a">
    <h1 style="color:lightcoral">Podesavanje Naloga</h1>
    <br />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Organizator.Id" />
                <div class="form-group">
                    <label asp-for="Organizator.Ime" class="control-label"></label>
                    <input asp-for="Organizator.Ime" class="form-control" />
                    <span asp-validation-for="Organizator.Ime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Organizator.Prezime" class="control-label"></label>
                    <input asp-for="Organizator.Prezime" class="form-control" />
                    <span asp-validation-for="Organizator.Prezime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Organizator.Email" class="control-label"></label>
                    <input asp-for="Organizator.Email" class="form-control" />
                    <span asp-validation-for="Organizator.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Organizator.Sifra" class="control-label"></label>
                    <input asp-for="Organizator.Sifra" class="form-control" />
                    <span asp-validation-for="Organizator.Sifra" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Organizator.Plata" class="control-label"></label>
                    <input asp-for="Organizator.Plata" class="form-control" />
                    <span asp-validation-for="Organizator.Plata" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Snimi" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>
    <br />
    <div>
        <a asp-page="./AdminPocetna">Vrati se na pocetnu stranu</a>
    </div>
    <br />
</div>
<br />
<style scoped>
    .a{
         width: 100%;
        display: grid;
        align-items:center;
        align-content: center;
        margin-left:37%;
    }
</style>
