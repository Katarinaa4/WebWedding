@page
@model WebWedding.Pages.OrganizatorPages.KreirajMeniModel
@{
    Layout = "_Layout_PrikazMenija_Organizator";
}
    <input type="hidden" id="organizatorID" asp-for="@Model.OrganizatorID">
    <form method="POST" enctype="multipart/form-data">
        <div class="s">
            <br />
            <h1>Unesite informacije novog menija</h1>
            <br />
            <input type="hidden" asp-for="ID" />
            <div asp-validation-summary="All"></div>
            <div style="display:flex;flex-direction: column; margin-left: 40%; width: 250px;">
                <div class="w"> Naziv: <input type="text" asp-for="novMeni.Naziv" required /></div>
                
                <div class="w"> Cena: <input type="number" asp-for="novMeni.Cena" required /></div>
                
                <div class="border-bottom border-top w"> Opis: <input type="text" asp-for="novMeni.Opis" required /> </div>
                
                <div class="border-bottom border-top w"> Slika: <input type="file" asp-for="Slika" required /> </div>
                <br />
                <input class="lll " type="submit" value="Dodaj" asp-page-handler="Dodaj" />
                <br />
            </div>
            </div>
            <br />
</form>



<style scoped>
    .w {
        font-size:20px;
        color:black;
    }


    .lll {
        font-size: 25px;
        color: #8B3A3A;
    }

    .s {
        width: 100%;
        text-align: center;
        align-content: center;
    }

</style>