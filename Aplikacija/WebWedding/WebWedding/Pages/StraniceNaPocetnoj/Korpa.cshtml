        grid-template-columns: 40% 30% 20% 10%;
        align-content: center;
    }

    .s2 {
        width: 100%;
    }

    .p {
        font-size: 35px;
        color: #8B3A3A;
    }

    .pp {
        font-size: 27px;
        color: #8B3A3A;
    }

