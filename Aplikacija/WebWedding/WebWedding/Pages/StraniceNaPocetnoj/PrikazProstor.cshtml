@page
@model WebWedding.Pages.StraniceNaPocetnoj.PrikazProstorModel
@{
    @if (Model.ZaKorisnika)
    {
        @if (Model.ImaZahtev)
        {
            Layout = "_LayoutSZ";
        }
        else
        {
            Layout = "_LayoutBZ";
        }
    }
    else
    {
        Layout = "_LayoutMeniji";
    }
}
    <input type="hidden" id="korisnikID" asp-for="@Model.KorisnikID">
<form method="POST">

    <div id="fh5co-blog-section" class="fh5co-section-gray">
        <div class="s">
            <div class="n">
                <h1>Prostori</h1>
                <div style="font-size:large">U okviru svake firme mozete videti koji datumi su slobodni!</div>
                <br />
            </div>
            <br />
            <div class="s1">


                @foreach (var pros in Model.mojiProstori)
                {
                    <div>
                        @if (pros.StatusPrikaza == "Prikaz")
                        {



                            <div class="fh5co-blog animate-box s2">
                                <a href="@pros.Link"><img class="img-responsive" src="@pros.Slika" alt=""></a>
                                <div class="blog-text">
                                    <div class="prod-title">
                                        <h1><a href="@pros.Link"> @pros.Naziv</a> </h1>
                                        @if (Model.ImaZahtev)
                                        {
                                            <div>
                                                @for (var i = 0; i < pros.BrojZvezdica; i++)
                                                {
                                                    <span class="comment">
                                                        <a><i class="icon-star"></i></a>
                                                    </span>
                                                }
                                                <a asp-page="../StraniceNaPocetnoj/BrojZvezdica" asp-route-id="@pros.Id"> Ocenite nas i vi!</a>
                                            </div>
                                        }
                                        else
                                        {
                                            <div>
                                                @for (var i = 0; i < pros.BrojZvezdica; i++)
                                                {
                                                    <span class="comment">
                                                        <a><i class="icon-star"></i></a>
                                                    </span>
                                                }
                                            </div>
                                        }
                                        <div><span class="by"><i class="icon-address"></i> @pros.Adresa</span></div>
                                        <div><span class="comment"> Max kapacitet - @pros.Kapacitet</span></div>
                                        <p>@pros.Opis</p>
                                        <p><a asp-page="../StraniceNaPocetnoj/PrikazMenija" asp-route-id="@pros.Id"><i class="icon-address-book"></i>   Meniji...</a></p>
                                        @if (Model.ZaKorisnika)
                                        {
                                            <p><a asp-page="../Kalendari/KorisnikKalendarProstori" asp-route-id="@pros.Id"><i class="icon-calendar"></i>   Zakazani i rezervisani datumi...</a></p>
                                        }
                                    </div>
                                </div>
                            </div>

                        }
                    </div>

                }

            </div>
        </div>
    </div>
</form>

<style scoped>

    .ww {
        font-size: 60px;
        color: #ff6666;
    }

    .n {
        width: 100%;
        align-content: center;
        text-align: center;
    }

    .s {
        width: 100%;
        display: grid;
        grid-template-columns: auto;
        margin-left: 20px;
        margin-right: 20px;
    }

    .s1 {
        width: 100%;
        display: grid;
        grid-template-columns: 33% 33% 33%;
    }

    .s2 {
        width: 90%;
    }
</style>