@page
@model WebWedding.Pages.StraniceNaPocetnoj.PrikazMenijaModel
@{
    @if (Model.ZaKorisnika)
    {
        @if (Model.ImaZahtev)
        {
            Layout = "_LayoutSZ";
        }
        else
        {
            Layout = "_LayoutBZ";
        }
    }
    else
    {
        Layout = "_LayoutMeniji";
    }
}

    <input type="hidden" id="korisnikID" asp-for="@Model.KorisnikID">
<form method="post">
    <br />
    <br />
    <br />
    <div class="m lll">
            <h1> <a><i class="icon-heart"></i>Lista menija<i class="icon-heart"></i></a></h1>
    </div>
    <div class="fh5co-section-gray">
    <div class="s ">
    <div id="fh5co-blog-section" >
        <div class="s1">


            @foreach (var meni in Model.listaMenija)
            {

                @if (meni.Status != "NePrikazuj")
                {
                <div class="fh5co-blog animate-box s2">
                    <a><img class="img-responsive" src="@meni.Slika" alt=""></a>
                    <div class="blog-text">
                        <div class="prod-title">
                            <h3><a> @meni.Naziv</a> <span class="comment"></span></h3>
                            <p>@meni.Opis</p>

                        </div>
                    </div>
                </div>

                    }

                }

        </div>
    </div>
</div>
</div>
</form>

<style scoped>

    .meni {
        font-size: 60px;
        color: #ff6666;
    }

    .s {
        width: 100%;
        display: grid;
        grid-template-columns: auto;
        margin-left:20px;
        margin-right:20px;
    }

    .s1 {
        width: 100%;
        display: grid;
        grid-template-columns: 33% 33% 33%;
    }

    .s2 {
        width: 90%;
    }

     .m {
        text-align:center;
        align-content:center;
        width:100%;
    }
</style>