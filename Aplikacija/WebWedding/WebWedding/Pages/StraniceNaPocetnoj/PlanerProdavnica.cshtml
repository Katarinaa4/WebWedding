@page
@model WebWedding.Pages.StraniceNaPocetnoj.PlanerProdavnicaModel
@{
    @if (Model.ZaKorisnika)
    {
        @if (Model.ImaZahtev)
        {
            Layout = "_Layout_Planer_saZahtevom";
        }
        else
        {
            Layout = "_Layout_Planer_bezZahteva";
        }

    }
    else
    {
        Layout = "_Layout_Planer";
    }
}
    <input type="hidden" id="korisnikID" asp-for="@Model.KorisnikID">
<form method="post">


    <br />
    <h1 class="pp s">Planer prodavnica </h1>
    <br />
    <br />
    <h2 class="p sss">
        <a class="p sss" asp-page="../StraniceNaPocetnoj/Korpa">Vasa korpa <i class="icon-shopping-bag"></i></a>
        <br />
    </h2>
    <h1 class="ppp sss">
        <a class="ppp sss" asp-page="../StraniceNaPocetnoj/ObavestenjeONarudzbini">Obavestenje o statusu Vasih narudzbina <i class="icon-cloud-check"></i></a>
        <br />
    </h1>
    <br />
    <div id="fh5co-blog-section" class="fh5co-section-gray">
        <div class="s1">

            @foreach (var planer in Model.listaPlanera)
            {
                @if (planer.Status == null)
                {
                    <div class="fh5co-blog animate-box s2">
                        <a><img src="@planer.Slika" width="100px" height="200px" alt=""></a>
                        <div class="blog-text">
                            <div class="prod-title">
                                <h2 class="ll"><a> @planer.Naziv</a> <span class="comment"></span></h2>
                                @if (planer.BrojPlaneraNaRaspolaganju == 0)
                                {
                                    <div class="s2 l">Rasprodat</div>
                                }
                                <div class="s2 l"><span>Cena @planer.Cena rsd</span></div>
                            </div>
                        </div>
                        @if (planer.BrojPlaneraNaRaspolaganju != 0)
                        {
                            <div class="fc-footer-toolbar l">
                                <a asp-page="../StraniceNaPocetnoj/KreirajNarudzbinu" asp-route-id="@planer.Id"> Dodaj u korpu <i class="icon-shopping-bag"></i></a>
                            </div>
                        }
                    </div>
                }
            }

        </div>
    </div>

</form>

<style scoped>

    .p {
        font-size: 35px;
        color: #8B3A3A;
    }

    .l {
        font-size: 17px;
        color: #8B3A3A;
    }

    .ll {
        font-size: 25px;
        color: #8B3A3A;
    }

    .s {
        width: 100%;
        text-align: center;
    }

    .pp {
        font-size: 45px;
        color: #8B3A3A;
    }

    .ppp {
        font-size: 25px;
        color: #8B3A3A;
    }

    .w {
        font-size: 30px;
        color: #ff6666;
    }

    .s1 {
        width: 100%;
        display: grid;
        grid-template-columns: 24% 24% 24% 24%;
        margin-left: 30px;
    }

    .s2 {
        width: 90%;
    }


    .sss {
        width: 100%;
        text-align: right;
        margin-right: 30px;
    }
</style>