@page
@model WebWedding.Pages.AdminPages.AdminIzmeniNarudzbinuModel

@{
    ViewData["Title"] = "AdminIzmeniNarudzbinuModel";
    Layout = "_Layout_Admin";
}



    <div class="row">
        <input type="hidden" id="adminID" asp-for="@Model.AdminID">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Narudzbina.Id" />
                <input type="hidden" asp-for="Narudzbina.Arhivirano" />
                <div class="form-group">
                    <label class="control-label">Korisnik</label>
                    <select asp-for="KorisnikId" asp-items="Model.KorisnikOptions" class="form-control"></select>
                    <span asp-validation-for="Narudzbina.MojKorisnik.Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Narudzbina.Adresa" class="control-label"></label>
                    <input asp-for="Narudzbina.Adresa" class="form-control" />
                    <span asp-validation-for="Narudzbina.Adresa" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Broj telefona</label>
                    <input asp-for="Narudzbina.BrojTelefona" class="form-control" />
                    <span asp-validation-for="Narudzbina.BrojTelefona" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="control-label">Cena</label>
                    <input asp-for="Narudzbina.UkupnaCena" class="form-control" />
                    <span asp-validation-for="Narudzbina.UkupnaCena" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Narudzbina.Status" class="control-label"></label>
                    <select asp-for="Narudzbina.Status" asp-items="Model.StatusList" class="form-control"></select>
                    <span asp-validation-for="Narudzbina.Status" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Planer</label>
                    <select asp-for="PlanerId" asp-items="Model.PlanerOptions" class="form-control"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

<div>
    <a asp-page="./AdminPregledNarudzbina">Nazad na listu narudzbina</a>
</div>

