@page
@model WebWedding.Pages.AdminPages.AdminPodesavanjaNalogaModel

@{
    ViewData["Title"] = "Podesavanja";
    Layout = "~/Pages/Shared/_Layout_Admin.cshtml";
}
    <input type="hidden" id="adminID" asp-for="@Model.AdminID">

    <div style=" width: 100%;
        display: grid;
        align-items:center;
        align-content: center;
        margin-left:37%;">

        <h1 style="color:lightcoral">Podesavanje Naloga</h1>



        <div class="row">
            <div class="col-md-4">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Administrator.Id" />
                    <div class="form-group">
                        <label asp-for="Administrator.Ime" class="control-label"></label>
                        <input asp-for="Administrator.Ime" class="form-control" />
                        <span asp-validation-for="Administrator.Ime" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Administrator.Prezime" class="control-label"></label>
                        <input asp-for="Administrator.Prezime" class="form-control" />
                        <span asp-validation-for="Administrator.Prezime" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Administrator.Email" class="control-label"></label>
                        <input asp-for="Administrator.Email" class="form-control" />
                        <span asp-validation-for="Administrator.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Administrator.Sifra" class="control-label"></label>
                        <input asp-for="Administrator.Sifra" class="form-control" />
                        <span asp-validation-for="Administrator.Sifra" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Snimi" class="btn btn-default" />
                    </div>
                </form>
            </div>
        </div>
        <div>
            <a asp-page="./AdminPocetna">Vrati se na pocetnu stranu</a>
        </div>
    </div>



