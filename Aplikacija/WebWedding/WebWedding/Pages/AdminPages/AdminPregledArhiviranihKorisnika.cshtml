@page
@model WebWedding.Pages.AdminPages.AdminPregledArhiviranihKorisnikaModel
@{
    ViewData["Title"] = "AdminPregledArhiviranihKorisnika";
    Layout = "_Layout_Admin";
}

    <div style="display:flex; justify-content:center">
        <h1 style="color:lightcoral">Pregled arhiviranih korisnika</h1>
    </div>
    <div class="table-responsive">
        <input type="hidden" id="adminID" asp-for="@Model.AdminID">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Korisnici[0].Ime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Korisnici[0].Prezime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Korisnici[0].Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Korisnici[0].Sifra)
                    </th>
                    <th>
                       Broj Telefona
                    </th>
                    <th>
                        Zahtev
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Korisnici)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Ime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Prezime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Sifra)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BrojTelefona)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MojZahtev.Status)
                        </td>
                        <td>
                            <a asp-page="./AdminVratiKorisnika" asp-route-id="@item.Id">Vrati</a> |
                            <a asp-page="./AdminObrisiKorisnika" asp-route-id="@item.Id">Obrisi</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

